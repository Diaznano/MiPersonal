<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fisico">


    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="80dp"
        fbutton:buttonColor="@color/fbutton_color_turquoise"
        android:text="@string/boton_nueva_rutina"
        android:id="@+id/bNuevaRutina"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/fbutton_color_midnight_blue"
        android:onClick="nuevaRutina"
        android:layout_marginTop="200dp"
        android:textSize="30dp"
         />

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        fbutton:buttonColor="@color/fbutton_color_turquoise"
        android:text="Cambiar ContraseÃ±a"
        android:id="@+id/bCambiarContra"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp"
        fbutton:cornerRadius="3dp"
        android:onClick="cambiar"
        fbutton:shadowColor="@color/fbutton_color_midnight_blue"
        android:layout_marginTop="670dp"
        android:textSize="25dp"/>

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="80dp"
        fbutton:buttonColor="@color/fbutton_color_turquoise"
        android:text="@string/boton_nueva_dieta"
        android:id="@+id/bNuevaDieta"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/fbutton_color_midnight_blue"
        android:onClick="nuevaDieta"
        android:layout_marginTop="400dp"
        android:textSize="30dp"/>

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        fbutton:buttonColor="@color/fbutton_color_turquoise"
        android:text="Inicio"
        android:id="@+id/bInicio"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp"
        fbutton:cornerRadius="3dp"
        android:onClick="inicio"
        fbutton:shadowColor="@color/fbutton_color_midnight_blue"
        android:layout_marginTop="720dp"
        android:textSize="30dp" />


</RelativeLayout>
