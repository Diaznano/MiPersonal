<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ObjetivosActivity">


    <ImageButton
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:id="@+id/bDeportes"
        android:src="@drawable/football"
        android:background="@color/fbutton_color_turquoise"
        android:contentDescription="@string/content_deportes"
        android:adjustViewBounds="false"
        android:onClick="abreVistaImpresion"
        android:layout_below="@+id/tDeportes"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:id="@+id/bFitness"
        android:src="@drawable/gym"
        android:background="@color/fbutton_color_turquoise"
        android:contentDescription="@string/content_fitness"
        android:onClick="abreVistaImpresion"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:id="@+id/bSalud"
        android:src="@drawable/salud"
        android:background="@color/fbutton_color_turquoise"
        android:contentDescription="@string/content_salud"
        android:onClick="abreVistaImpresion"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bFitness"
        android:layout_alignStart="@+id/bFitness" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tDeportes"
        android:text="@string/texto_deportes"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tSalud"
        android:text="@string/texto_salud"
        android:layout_above="@+id/bSalud"
        android:layout_alignRight="@+id/tFitness"
        android:layout_alignEnd="@+id/tFitness" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tFitness"
        android:text="@string/texto_fitness"
        android:layout_above="@+id/bFitness"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
