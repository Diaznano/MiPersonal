<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eci.mipersonaltrainer.UsuarioYaRegistradoActivity">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDni"
        android:inputType="number"
        android:hint="@string/hint_busqueda_dni"
        android:layout_marginTop="7dp"
        android:textSize="30sp" />
    <info.hoang8f.widget.FButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fbutton:buttonColor="@color/fbutton_color_turquoise"
        android:text="@string/btn_buscar"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/fbutton_color_midnight_blue"
        android:id="@+id/bBuscar"
        android:onClick="consultaporcodigo"
        android:layout_alignBottom="@+id/etDni"
        android:layout_toRightOf="@+id/etDni" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@+id/tvN"
        android:layout_alignBottom="@+id/tvP"
        android:layout_toRightOf="@+id/tvE"
        android:id="@+id/linearLayout">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNom"
        android:layout_marginLeft="40dp"
        android:inputType="textPersonName"
        android:textSize="30sp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEmail"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="38dp"
        android:textSize="30sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etFecha"
            android:inputType="date"
            android:layout_marginLeft="170dp"
            android:textSize="30sp"
            android:layout_marginTop="47dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAltura"
        android:inputType="number"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="17dp"
        android:textSize="30sp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/etPeso"
        android:inputType="numberDecimal"
        android:layout_marginTop="57dp"
        android:textSize="30sp"
        />

</LinearLayout>

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="28sp"
        fbutton:buttonColor="@color/fbutton_color_turquoise"
        android:text="@string/boton_guardar_cambios"
        android:id="@+id/bGuardarCambios"
        android:layout_marginTop="800dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="7dp"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/fbutton_color_midnight_blue"
        android:onClick="modificacion" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_nombre"
        android:id="@+id/tvN"
        android:textSize="30sp"
        android:layout_marginTop="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_email"
        android:id="@+id/tvE"
        android:layout_marginTop="220dp"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_fecha"
        android:id="@+id/tvF"
        android:textSize="30sp"
        android:layout_marginTop="320dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_altura"
        android:id="@+id/tvA"
        android:textSize="30sp"
        android:layout_marginTop="420dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_peso"
        android:id="@+id/tvP"
        android:textSize="30sp"
        android:layout_marginTop="525dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:visibility="invisible"
        android:id="@+id/tvKg"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="535dp"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:visibility="invisible"
        android:id="@+id/tvCm"
        android:textSize="25sp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="430dp" />

</RelativeLayout>
