<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eci.mipersonaltrainer.ImpresionActivity">

    <Button
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:text="@string/saca_rutina"
        android:id="@+id/bRutina"
        android:textSize="36sp"
        android:onClick="mensajeRutina"
        android:textColor="@color/accent_material_dark"
        android:layout_below="@+id/bDieta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp" />

    <Button
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:text="@string/saca_dieta"
        android:id="@+id/bDieta"
        android:textSize="36sp"
        android:onClick="mensajeDieta"
        android:textColor="@color/accent_material_dark"
        android:layout_marginTop="280dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bRutina"
        android:layout_alignStart="@+id/bRutina" />
</RelativeLayout>
