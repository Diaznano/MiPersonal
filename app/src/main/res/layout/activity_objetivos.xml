<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ObjetivosActivity">


    <ImageButton
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/bDeportes"
        android:src="@drawable/football"
        android:background="@color/fbutton_color_turquoise"
        android:contentDescription="@string/content_deportes"
        android:adjustViewBounds="false"
        android:onClick="abreVistaImpresion"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/bFitness"
        android:src="@drawable/gym"
        android:background="@color/fbutton_color_turquoise"
        android:contentDescription="@string/content_fitness"
        android:onClick="abreVistaImpresion"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/bSalud"
        android:src="@drawable/salud"
        android:background="@color/fbutton_color_turquoise"
        android:contentDescription="@string/content_salud"
        android:onClick="abreVistaImpresion"
        android:layout_marginTop="400dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tDeportes"
        android:text="@string/texto_deportes"
        android:layout_alignTop="@id/bDeportes" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tSalud"
        android:text="@string/texto_salud"
        android:layout_alignTop="@+id/bSalud"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tFitness"
        android:text="@string/texto_fitness"
        android:layout_alignTop="@id/bFitness" />
</RelativeLayout>
