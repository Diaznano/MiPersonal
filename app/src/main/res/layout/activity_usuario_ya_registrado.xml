<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.eci.mipersonaltrainer.UsuarioYaRegistradoActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDni"
        android:inputType="number"
        android:hint="@string/hint_busqueda_dni"
        android:layout_marginTop="7dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_buscar"
        android:id="@+id/bBuscar"
        android:onClick="consultaporcodigo"
        android:layout_marginLeft="135dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNom"
        android:inputType="textPersonName"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="60dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEmail"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="110dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAltura"
        android:inputType="number"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="210dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPeso"
        android:inputType="numberDecimal"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="260dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etFecha"
        android:inputType="date"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="160dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:id="@+id/tvN"
        android:layout_alignBottom="@+id/etNom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/tvE"
        android:layout_alignBottom="@+id/etEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Nacimiento:"
        android:id="@+id/tvF"
        android:layout_alignBottom="@+id/etFecha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura:"
        android:id="@+id/tvA"
        android:layout_alignBottom="@+id/etAltura"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso:"
        android:id="@+id/tvP"
        android:layout_alignBottom="@+id/etPeso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:id="@+id/tvKg"
        android:layout_alignBottom="@+id/etPeso"
        android:layout_toRightOf="@+id/etPeso"
        android:layout_toEndOf="@+id/etPeso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:id="@+id/tvCm"
        android:layout_alignBottom="@+id/etAltura"
        android:layout_toRightOf="@+id/etAltura"
        android:layout_toEndOf="@+id/etAltura" />

</RelativeLayout>
