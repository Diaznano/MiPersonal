<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ObjetivosActivity">


    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/bDeportes"
        android:src="@drawable/football"
        android:contentDescription="@string/content_deportes"
        android:adjustViewBounds="false"
        android:onClick="abreVistaImpresion"
        android:layout_marginBottom="95dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignBottom="@+id/tSalud"
        android:layout_toLeftOf="@+id/tSalud"
        android:layout_toStartOf="@+id/tSalud" />
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/bFitness"
        android:src="@drawable/gym"
        android:contentDescription="@string/content_fitness"
        android:onClick="abreVistaImpresion"
        android:layout_alignTop="@+id/bDeportes"
        android:layout_toRightOf="@+id/tSalud"
        android:layout_toEndOf="@+id/tSalud" />
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/bSalud"
        android:src="@drawable/salud"
        android:contentDescription="@string/content_salud"
        android:onClick="abreVistaImpresion"
        android:layout_marginBottom="403dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tDeportes"
        android:text="@string/texto_deportes"
        android:layout_above="@+id/bDeportes"
        android:layout_alignRight="@+id/bDeportes"
        android:layout_alignEnd="@+id/bDeportes"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tSalud"
        android:text="@string/texto_salud"
        android:layout_alignTop="@+id/bSalud"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tFitness"
        android:text="@string/texto_fitness"
        android:layout_above="@+id/bFitness"
        android:layout_toRightOf="@+id/bSalud"
        android:layout_toEndOf="@+id/bSalud" />
</RelativeLayout>
